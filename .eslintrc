{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "globalReturn": true,
            "impliedStrict": true,
            "jsx": true,
            "modules": true
        }
    },

    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],

    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "indent": ["error", 4],
        "semi": ["error", "never"],
        "no-trailing-spaces": ["error"],
        "quotes": ["error", "single"],
        "no-unused-vars": "off",
        "no-console": "off",

        "react/prop-types": "off"
    }
}
